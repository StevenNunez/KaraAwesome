<h1>Search Results for: <%= @query %></h1>
<%= link_to "Playlist", Playlist.first %>
<%= form_tag root_path, method: :get, class: "search" do %>
<fieldset>
  <legend></legend>
  <%= label_tag :q, "Search again" %>
  <%= text_field_tag :q %>
  <%= submit_tag "Get awesomeness", class: "btn btn-success" %>
</fieldset>
<% end %>
<% if @results %>
  <%= render partial: 'results', locals: {results: @results} %>
<% else %>
  No results for "<%= @query %>". Try again?
<% end %>
